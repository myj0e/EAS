{
    "version": "2.0.0",
    "command": "g++",
    "args": [
      "-g",
      "${file}",
      "-o",
      "${fileBasenameNoExtension}.exe"
    ],
    "problemMatcher": {
      "owner": "cpp",
      "fileLocation": [
        "relative",
        "${workspaceRoot}"
      ],
      "pattern": {
        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "severity": 4,
        "message": 5
      }
    },
    "tasks": [
      {
        "type": "shell",
        "label": "compile",
        "command": "C:\\MinGW\\bin\\g++.exe",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "C:\\MinGW\\bin"
        }
      }
    ]
  }